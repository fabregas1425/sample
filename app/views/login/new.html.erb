<%= form_tag("/login/create", method: :post) do %>

    <p>ユーザー名</p>
    <input name="name">
    <p>メールアドレス</p>
    <input name="email">
    <p>パスワード</p>
    <input type="password" name="password">
    <input type="submit" value="新規登録">

<% end %>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
        <p><%= message %></p>
    <% end %>
<% end %>